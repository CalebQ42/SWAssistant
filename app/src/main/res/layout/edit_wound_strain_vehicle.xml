<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/damage_card"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true">

        <Switch
            android:text="@string/damage_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/damage_switch"
            android:textSize="18sp"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/damage_layout"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/hull_trauma_layout">

                <TextView
                    android:text="@string/hull_trauma_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView130"
                    android:textSize="16sp"
                    android:textAlignment="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hull_trauma_minus"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <TextView
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/hull_trauma_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hull_trauma_plus"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>

                <Button
                    android:text="@string/reset_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hull_trauma_reset"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/sys_stress_layout">

                <TextView
                    android:text="@string/sys_stress_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView131"
                    android:textSize="16sp"
                    android:textAlignment="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sys_stress_minus"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <TextView
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sys_stress_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sys_stress_plus"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>

                <Button
                    android:text="@string/reset_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sys_stress_reset"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>