<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp">

    <TextView
        android:text="@string/no_res_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_res_text"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/success_fail_layout"
        android:visibility="gone">

        <TextView
            android:text="@string/success_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/success_fail_desc"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/success_fail_val"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/adv_thr_layout"
        android:visibility="gone">

        <TextView
            android:text="@string/advantage_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adv_thr_desc"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adv_thr_val"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/triumph_layout"
        android:visibility="gone">

        <TextView
            android:text="@string/triumph_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/triumph_val"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/despair_layout"
        android:visibility="gone">

        <TextView
            android:text="@string/despair_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/despair_val"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/light_points_layout"
        android:visibility="gone">

        <TextView
            android:text="@string/light_side_points_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/light_points_val"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dark_points_layout"
        android:visibility="gone">

        <TextView
            android:text="@string/dark_side_points_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dark_points_val"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

</LinearLayout>