<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/force_powers_card"
    android:layout_margin="5dp"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:animationCache="true">

        <Switch
            android:text="@string/force_powers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/force_powers_show"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorTertiary" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/force_powers_main"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/force_rating_layout"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="@string/force_rating_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView42"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:text="0"
                    android:layout_height="wrap_content"
                    android:id="@+id/force_rating_text"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:layout_width="25dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/force_powers_layout"
                android:animateLayoutChanges="true"></LinearLayout>

            <Button
                android:text="@string/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/force_powers_add"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>