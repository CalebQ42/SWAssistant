            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/success_plus"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintLeft_toRightOf="@+id/success_minus"
            app:layout_constraintRight_toLeftOf="@+id/success_plus"
            app:layout_constraintTop_toTopOf="@+id/success_plus" />

